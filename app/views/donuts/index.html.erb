<h1>All of our Donuts</h1>
<div class="row">
<% @donuts.each do |donut| %>
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img src="<%= http://www.cafedonutsmn.com/wp-content/uploads/2012/11/boston-cream-donut-078-Large1-1024x1024.jpg %>">
      <div class="caption">
        <h3><%= donut.name %></h3>
        <h3>Cost: $<%= donut.cost %></h3>
        <%= link_to "More Info", donut, class: "btn btn-default" %>
      </div>
    </div>
  </div>
  <% end %>
</div>

<br>

<%= link_to 'New donut', new_donut_path, class: "btn btn-primary" %>